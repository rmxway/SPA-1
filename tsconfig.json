{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
		"target": "ES6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "./build",
		"baseUrl": "./src",
		"removeComments": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "@types/declarations.d.ts", "pages/_document.js"],
	"exclude": ["node_modules", ".vscode"]
}
