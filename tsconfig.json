{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"allowJs": true,
		"jsx": "react-jsx",
		"outDir": "./build",
		"baseUrl": "./src",
		"removeComments": true,
        "sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"paths": {
			"@/*": ["./*"],
            "@/assets/*": ["./assets/*"],
			"@/components/*": ["./components/*"],
			"@/styles/*": ["./styles/*"],
			"@/store/*": ["./store/*"],
			"@/services/*": ["./services/*"],
			"@/pages/*": ["./pages/*"],
			"@/theme/*": ["./theme/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "./declarations.d.ts"],
	"exclude": ["node_modules", ".vscode"],
	"display": "Recommended"
}
