{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "outDir": "./build",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./declarations.d.ts"],
  "exclude": ["node_modules"],
  "display": "Recommended",
  "extends": "@tsconfig/recommended/tsconfig.json"
}
